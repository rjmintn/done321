<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
      <th>Create by</th>
      <th>List</th>
      <th>Priority</th>
      <th>Duration</th>
      <th>Repeat</th>
      <th>Due</th>
      <th>Active</th>
      <th>Start</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.user %></td>
        <td><%= item.create_by %></td>
        <td><%= item.list %></td>
        <td><%= item.priority %></td>
        <td><%= item.duration %></td>
        <td><%= item.repeat %></td>
        <td><%= item.due %></td>
        <td><%= item.active %></td>
        <td><%= item.start %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_list_item_path %>
