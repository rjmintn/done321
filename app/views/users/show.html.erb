<div class="col-md-12">

  <div class="jumbotron">
    <% @user.lists.each do |list| %>
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title"><%= link_to "#{list.name}", list_path(list) %></h3><%= "#{pluralize(list.items.count, 'item')}" %>
        <br />
      </div>
      <div class="panel-body">
        <%= list.description %> <br />
        <%= link_to '<i class = "glyphicon glyphicon-plus-sign"></i> '.html_safe,  new_list_item_path(list) %> |
        <%= link_to '<i class = "glyphicon glyphicon-pencil"></i> '.html_safe,  edit_list_path(list) %> |
        <%= link_to '<i class = "glyphicon glyphicon-trash"></i> '.html_safe, list, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
    <%end%>
    <%= link_to 'New List', new_list_path %>
  </div>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><%= @user.email %></h3>
    </div>
    <div class="panel-body">
      <div class="col-md-6">
        <p>You have <%= pluralize(@user.lists.count, 'list') %> and <%= pluralize(@user.items.count, 'item') %> to complete.</p>
      </div>
      <div class="col-md-6">
        <p><%= "You have logged in #{pluralize(@user.sign_in_count, 'time')} since creating your account #{time_ago_in_words(@user.created_at)} ago." %></p>
        <p> <%= "You have been here for #{time_ago_in_words(@user.last_sign_in_at)} and have completed (a number) of tasks."%></p>
      </div>
    </div>
  </div>
</div>
