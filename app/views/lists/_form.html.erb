    <%= f.label :description, :class => 'control-label'%><br>
    <%= f.text_area :description, :class => 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>

  <% @list.items.each do |item| %>
    <%= item %>
  <% end %>
</fieldset>
<% end %>
