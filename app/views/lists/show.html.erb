<div class="jumbotron">

  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title"><%= @list.name %></h3>
    </div>
    <div class="panel-body">
      <% @list.items.each do |item| %>
        <%= link_to item.name, list_item_path(item.list, item) %>
        <br />
        <%= link_to 'Edit', edit_list_item_path(item.list, item) %> |
                <%= link_to 'Delete', [item.list, item], method: :delete, data: { confirm: 'Are you sure?' } %><br />

      <%end%>

    </div>
  </div>

  <%= link_to 'New Item', new_list_item_path(@list) %>
</div>
